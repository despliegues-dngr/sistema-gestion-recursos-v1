{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@layouts": ["./src/layouts"],
      "@layouts/*": ["./src/layouts/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@stores": ["./src/stores"],
      "@stores/*": ["./src/stores/*"],
      "@lib": ["./src/lib"],
      "@lib/*": ["./src/lib/*"],
      "@styles": ["./src/styles"],
      "@styles/*": ["./src/styles/*"],
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@config": ["./src/config"],
      "@config/*": ["./src/config/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

